<p id="notice"><%= notice %></p>

<h2> <%= @post.title %> </h2>

<%= markdown(@post.content).html_safe %>

<h3> Excerpt </h3>
<p> <%= @post.excerpt %> </p>

<div class="well well-small">
  <% @post.categories.each do |c| %>
    <%= link_to c.title, category_path(c) %>
  <% end %>
</div>


<%= link_to 'Edit', edit_admin_post_path(@post) %> | <%= link_to 'Back', admin_posts_path %>